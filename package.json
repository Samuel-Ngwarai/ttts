{
  "name": "simple-typscript-express-boilerplate",
  "version": "0.0.2",
  "description": "Simple Typescript Express Boilerplate",
  "engines": {
    "node": "18"
  },
  "repository": {
    "type": "git"
  },
  "dependencies": {
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.17",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "inversify": "^6.0.1",
    "node-cache": "^5.1.2",
    "point-in-polygon": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.59.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "node-config": "^0.0.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "ts-jest": "^29.0.5",
    "tsutils": "^3.21.0",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "dev": "CREATE_SWAGGER_FILE=true LOG_LEVEL=debug npm start",
    "docker:up": "docker-compose build && docker-compose up",
    "watch": "LOG_LEVEL=debug concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"tsc -w -p tsconfig.release.json\" \"nodemon build/src/main.js --delay 1\"",
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:int",
    "test:unit": "NODE_CONFIG_DIR=$(pwd)/src/config jest --config=tests/jest.config.unit.json",
    "test:int": "NODE_CONFIG_DIR=$(pwd)/src/config jest --config=tests/jest.config.integration.json",
    "test:watch": "npm run test:unit -- --watch"
  },
  "author": "Samuel Ngwarai",
  "license": "Apache-2.0"
}
